{% extends 'base.html.twig' %}

{% block title %}Adición de categoría{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div align="center">

<a  href="/">Listar categorías</a>
<a  href="/product">Listar productos</a>
<a  href="/product/add">Agregar producto</a>

</style>



{% for message in app.flashes('exito') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}


<div class="example-wrapper">

	<h1>Adición de categoría ✅ </h1>

	{{ form_start(form) }}
	    <div class="my-custom-class-for-errors">
	        {{ form_errors(form) }}
	    </div>

	    <div class="row">
	        <div class="col"> {{ form_row(form.code, {'label': 'Código'}) }}
	        </div>
	        <div class="col">
	        {{ form_row(form.name, {'label': 'Nombre'}) }}
	        </div>

	        <div class="col">
	        {{ form_row(form.description, {'label': 'Descripción'}) }}
	        </div>
	        <div class="col">
	        {{ form_row(form.active, {'label': 'Activo'}) }}
	        </div>
	        <div class="col">
	        {{ form_row(form.submit, {'label': 'Enviar','required': 'false'}) }}
	        </div>

	    </div>
	{{ form_end(form) }}






</div>
{% endblock %}
