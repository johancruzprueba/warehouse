{% extends 'base.html.twig' %}

{% block title %}Adición de producto{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div align="center">

<a  href="/">Listar categorías</a>
<a  href="/product">Listar productos</a>
<a  href="/product/add">Agregar producto</a>





{% for message in app.flashes('exito') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}


<div class="example-wrapper">

	<h1>Adición de producto ✅ </h1>



	{{form(form) }}


</div>



<script>



document.addEventListener('DOMContentLoaded', function() {
	var categories = [];

	{% for category in del_categories %}
	categories.push("{{ category.id }}");
	{% endfor %}


   var selectobject = document.getElementById("product_category");
   for (var i=0; i<selectobject.length; i++) {

	   	if (selectobject.options[i].value.toString() == categories ) {
	     	selectobject.remove(i);
	     	}
   	}

}, false);


</script>
{% endblock %}
